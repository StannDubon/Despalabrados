<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Capa 1: Borde exterior con degradado -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#F73E9E"
                android:endColor="#A454F4"
                android:angle="270" />
            <corners android:radius="20dp" />
        </shape>
    </item>

    <item
        android:left="5dp"
        android:top="5dp"
        android:right="5dp"
        android:bottom="5dp">
        <shape android:shape="rectangle">
            <solid android:color="#000000" />
            <corners android:radius="15dp" />
        </shape>
    </item>
</layer-list>